{
  "expo": {
    "name": "Koflix",
    "slug": "koflix-c",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/koflix-logo-bg.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "googleServicesFile": "./lib/credentials/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon-koflix.png",
        "backgroundColor": "#000000"
      },
      "package": "com.vinh.koflix"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.ico"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/koflix-logo-nobg.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
